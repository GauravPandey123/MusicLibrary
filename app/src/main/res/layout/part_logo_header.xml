<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/img_app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:src="@drawable/img_app_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_width="@dimen/splash_logo_width"
            android:layout_height="@dimen/splash_logo_height" />
    </LinearLayout>

